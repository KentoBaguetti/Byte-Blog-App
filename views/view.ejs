<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>

    <div class="min-vh-100">
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="content p-5 col-lg-12 col-12 border border-dark" style="border-radius: 20px;">
                    <h1 class="text-center"><%= title %></h1>
                    <p><%= content %></p>
                    <hr>

                    <div class="row justify-content-center">
                        <div class="d-inline-flex">
                            <form action="/edit/<%= postID %>" method="get" class="my-2">
                                <input class="btn border" type="submit" value="Edit Post" name="<%= postID %>">
                            </form>  
                            <form action="/delete" method="post" class="my-2">
                                <input hidden type="text" name="postID" value="<%= postID %>">
                                <input class="btn border " type="submit" value="Delete Post" name="delete">
                            </form>
                        </div>
                        <div class="col-md">
                           
                        </div>
    
                    </div>

                </div>
            </div>
        </div>
    </div>
    
</body>
</html>